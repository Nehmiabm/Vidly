@model Vidly2.Models.Movie

@{
    ViewBag.Title = "Movie Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.Value.ToLongDateString()</li>
    <li>Date Added: @Model.AddedDate.Value.ToLongDateString()</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>
