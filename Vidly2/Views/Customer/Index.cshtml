@using Vidly2.Models
@model System.Collections.Generic.IEnumerable<Vidly2.Models.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@if (@Model == null)
{
    <h4>We don't have any customers yet!</h4>
}
else
{
    <table>
        <thead>
        <tr>
            <th>Customer</th>
            <th>Discount</th>
        </tr>
        </thead>
        <tbody>
        @foreach (Customer cust in @Model)
        {
            <tr><td>@Html.ActionLink(cust.Name, "Details", "Customer", new {id = cust.Id}, null)</td></tr>
            <tr><td>@cust.MembershipType.DiscountRate</td></tr>
        }

        </tbody>
    </table>
}